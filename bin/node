#!/bin/bash

cd "$(dirname "$0")/.."
export $(grep -v '^#' .env | xargs) 2>/dev/null

# Load the same environment variables as interactive shell
if [ -f ~/.profile ]; then
      . ~/.profile
fi
if [ -f ~/.bash_profile ]; then
      . ~/.bash_profile
fi

# Support both interactive and non-interactive mode
if [ -t 0 ]; then
    /usr/local/bin/docker-compose run --rm -unode:node node sh $@
else
    /usr/local/bin/docker-compose run --rm -unode:node -T node sh $@
fi

